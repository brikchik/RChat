<Window x:Name="RChatClient" x:Class="RChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RChatClient"
        mc:Ignorable="d"
        Title="RChat Client" Height="450" Width="784" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Чат" Height="381" Margin="0,-2,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="756"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,385,0,0" TextWrapping="Wrap" Text="Адрес сервера:" VerticalAlignment="Top" Height="23" Width="125" FontSize="16"/>
        <TextBox x:Name="ServerAddress" HorizontalAlignment="Left" Height="25" Margin="139,384,0,0" TextWrapping="Wrap" Text="localhost:4000" VerticalAlignment="Top" Width="383" FontSize="16"/>
        <Button x:Name="ConnectButton" Content="Подключиться" HorizontalAlignment="Left" Margin="527,386,0,0" VerticalAlignment="Top" Width="116" Height="21"/>
        <Rectangle x:Name="ConnectionIndicator" Fill="#FF574F4E" HorizontalAlignment="Left" Height="23" Margin="663,384,0,0" Stroke="Black" VerticalAlignment="Top" Width="99"/>
    </Grid>
</Window>
